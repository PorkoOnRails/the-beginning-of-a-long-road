//The cars and the things they gonna use to the code work

const fiat = {
    company: "Fiat Uno",
    model: ["Fire"],
    price: 3000,
    colors: ["White", "Blue"],

    fiatFullSpec: function() {
        return "This is the " + this.company + "\nWe have the model " + this.model + "\nThe price is " +
        this.price + " with the colors " + this.colors[0] + " and " + this.colors[1] + " available!\n";
    }
}

const ferrari = {
    company: "Ferrari",
    model: ["SF90"],
    price: 150000,
    colors: ["Red"],

    ferrariFullSpec: function() {
        return "This is the " + this.company + "\nWe have the model " + this.model + "\nThe price is " +
        this.price + " with the colors " + this.colors + " and " + this.colors + " available!\n";
    }
    
}

const bmw = {
    company: "BMW",
    model: ["X1", "X9"],
    price: 30000,
    colors: ["White", "Black", "Blue"],


    bmwFullSpec: function() {
        return "This is the " + this.company + "\nWe have the model " + this.model[0] + " and " + this.model[1] + "\nThe price is " +
        this.price + " with the colors " + this.colors[0] + ", " + this.colors[1] + " and " + this.colors[2] + " available!\n";
    }
}

console.log(fiat.fiatFullSpec());
console.log(bmw.bmwFullSpec());
console.log(ferrari.ferrariFullSpec());

