//The era of Constructors

function Car(make, model, year, color, color2) {
    this.make = make;
    this.model = model;
    this.year = year;
    this.color = color;
    this.color2 = color2;

    //Trying to make a if statement that put the " and " when have more than 2 options of color but didn't work

    this.fullSpec = function() {/*
        if (this.color2 == "Blue") {
            return `We have the ${this.make} model ${this.model} year ${this.year} with the color ${this.color} and ${this.color2}`;
        } else*/
        return `We have the ${this.make} model ${this.model} year ${this.year} with the color ${this.color}` //if (this.color2 == "Blue") { "and " + this.color2}; }
    }
}

const uno = new Car("Fiat", "Fire", 2010, "White");

const sf90 = new Car("Ferrari", "SF90", 2019, "Red");

//Testing to see if I can add some more information for the vehicle later on

console.log(uno)

uno.color2 = "Blue";

console.log(uno)

console.log(uno.fullSpec())
console.log(sf90.fullSpec())

//Output
/*
Car {make: 'Fiat', model: 'Fire', year: 2010, color: 'White', color2: undefined, …}
Car {make: 'Fiat', model: 'Fire', year: 2010, color: 'White', color2: 'Blue', …}

We have the Fiat model Fire year 2010 with the color White
We have the Ferrari model SF90 year 2019 with the color Red
